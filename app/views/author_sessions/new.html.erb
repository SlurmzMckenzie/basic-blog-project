<div class="col-md-4 col-md-offset-4 well">
	<h1>Login</h1>

	<%= form_tag author_sessions_path, method: :post do %>
		<div class="field form-group">
			<%= label_tag :email, nil, class: "control-label" %>
			<%= text_field_tag :email, nil, class: "form-control"  %>
			<br/>
		</div>
		<div class="field form-group">
			<%= label_tag :password, nil, class: "control-label" %>
			<%= password_field_tag :password, nil, class: "form-control" %>
			<br/>
		</div>
		<div class="actions">
			<%= submit_tag "Login", :class => "btn btn-success pull-right" %>
		</div>
	<% end %>

	<%= link_to 'Back', articles_path, :class => "btn btn-link" %>
</div>