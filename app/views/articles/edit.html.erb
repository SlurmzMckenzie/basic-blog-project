<div class="col-md-8 col-md-offset-2">
	<h1 style="margin-top:50px;">Edit Article</h1>
	<%= form_for(@article, html: {multipart: true}) do |f| %>
		<div class="form-group">
			<ul>
			<% @article.errors.full_messages.each do |error| %>
				<li><%= error %></li>
			<% end %>
			</ul>
		</div>
		<div class="form-group">
			<p>
				<%= f.label :title, :class => "control-label" %><br />
				<%= f.text_field :title, :class => "form-control" %>
			</p>
		</div>
		<div class="form-group">
			<p>
				<%= f.label :body, :class => "control-label" %><br />
				<%= f.text_area :body, :class => "form-control", :rows => "10"%>
			</p>
		</div>

		<div class="form-group">
			<p>
				<%= f.label :tag_list, :class => "control-label"  %><br />
				<%= f.text_field :tag_list, :class => "form-control"  %>
			</p>
		</div>

		<div class="form-group">
			<p>
				<% if @article.image.exists? %>
					<%= image_tag @article.image.url %><br/>
				<% end %>
				<%= f.label :image, "Attach an Image", :class => "control-label" %><br />
				<%= f.file_field :image, :class => "form-control" %>
			</p>
		</div>
		
		<p>
			<%= link_to "<< Back to Article", article_path(@article), class: 'btn btn-link' %>
			<%= link_to "delete", article_path(@article), method: :delete, :class  => "btn btn-danger pull-right", :style => "margin-left: 10px;", data: {confirm: "Are you sure you want to delete the article?"}  %>
			<%= f.submit "Save", :class  => "btn btn-success pull-right" %>
		</p>
	<% end %>
</div>