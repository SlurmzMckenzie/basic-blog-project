			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field form-group">
		<%= f.label :username, :class => "control-label" %><br>
		<%= f.text_field :username, :class => "form-control" %>
	</div>
	<div class="field form-group">
		<%= f.label :email, :class => "control-label" %><br>
		<%= f.text_field :email, :class => "form-control" %>
	</div>
	<div class="field form-group">
		<%= f.label :password, :class => "control-label" %><br>
		<%= f.password_field :password, :class => "form-control" %>
	</div>
	<div class="field form-group">
		<%= f.label :password_confirmation, :class => "control-label" %><br>
		<%= f.password_field :password_confirmation, :class => "form-control" %>
	</div>
	<div class="actions">
		<%= f.submit "Create Author", :class  => "btn btn-success pull-right" %>
